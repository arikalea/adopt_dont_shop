<h2><%= @application.name %>'s application</h2>
<p>Name: <%= @application.name %></p>
<p>Address: <%= @application.address %></p>
<p>City: <%= @application.city %></p>
<p>State: <%= @application.state %></p>
<p>Zip: <%= @application.zip %></p>
<p>Application status: <%= @application.status %></p>

<h4><a href="/applications/<%= @application.id %>/edit">Edit Application</a></h4>
<%= button_to "Delete Application", "/applications/#{@application.id}", method: :delete %>

<p>I would make a good home because: <%= @application.description %></p>


<%= "Pets applied for:" %>
<% @application.pet_applications.each do |app| %>
<section id="admin-pet-<%= app.pet.id %>">
    <p><%= app.pet.name %></p>
    <% if app.pet.adoptable? %>
      <%= button_to 'Approve Application', "/admin/applications/#{@application.id}", method: :patch, local: true %>
    <% else %>
      <%= app.pet.name %>'s adoption is pending.
    <% end %>
<% end %>
</section>
